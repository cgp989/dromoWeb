<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}DROMO{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('resources/css/bootstrap.min.css')}}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('resources/css/dashboard.css')}}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('resources/css/estilos-web.css')}}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('resources/images/iconos/dromo_icon.png') }}" />
    </head>
    <body>
        {#BARRA NAVEGACION HEADER#}
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
              <div class="navbar-header">
                <a class="navbar-brand" href="#">&#60;DROMO&#62;</a>
              </div>
              <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                      <li><a href="#">Configuraciones</a></li>
                      <li><a href="{{ path('fos_user_profile_show') }}">Perfil</a></li>
                      <li><a href="{{ path('fos_user_security_logout') }}">Salir</a></li>
                    {% endif %}
                    <li><a href="#">Contacto</a></li>
                </ul>
              </div>
            </div>
        </nav>
        {#BARRA NAVEGACION FIN#}
        <div class="container-fluid">
            <div class="row">
                {#MENU LATERAL IZQUIERDO#}
                <div class="col-xs-3 sidebar">
                    {% if is_granted('ROLE_ADMIN') %}
                        <ul class="nav nav-sidebar">
                            <li class="{% if 'app_index_local' in app.request.get('_route') %}active{% endif %}">
                                <a href="{{ path('app_index_local') }}">Inicio</a>
                            </li>
                            <li class="{% if 'promocion' in app.request.get('_route') %}active{% endif %}">
                                <a href="{{ path('premio') }}">Premios</a>
                            </li>
                            <li class="{% if 'programacion' in app.request.get('_route') %}active{% endif %}">
                                <a href="{{ path('programacionPremio') }}">Programaciones premios</a>
                            </li>
                        </ul>
                        <ul class="nav nav-sidebar">
                            <li><a href="">Estad&iacute;sticas</a></li>
                        </ul>
                    {% elseif is_granted('ROLE_LOCAL') %}
                        <ul class="nav nav-sidebar">
                            <li class="{% if 'app_index_local' in app.request.get('_route') %}active{% endif %}">
                                <a href="{{ path('app_index_local') }}">Inicio</a>
                            </li>
                        <li class="{% if 'promocion' in app.request.get('_route') %}active{% endif %}">
                            <a href="{{ path('promocion') }}">Promociones</a>
                            </li>
                            <li class="{% if 'programacion' in app.request.get('_route') %}active{% endif %}">
                                <a href="{{ path('programacion') }}">Programaciones</a>
                            </li>
                        </ul>
                        <ul class="nav nav-sidebar">
                            <li><a href="">Estad&iacute;sticas</a></li>
                        </ul>
                    {% else %}
                        <ul class="nav nav-sidebar">
                            <li class="{% if 'fos_user_security_login' in app.request.get('_route') %}active{% endif %}">
                                <a href="{{ path('fos_user_security_login') }}">Login</a>
                            </li>
                        </ul>
                    {% endif %}
                </div>
                {#MENU LATERAL FIN#}
                {#CONTENIDO PAGINA#}
                <div class="col-xs-9 col-xs-offset-3 main">
                    {% block body %}
                    {% endblock %}
                </div>
            </div>
        </div>
        {% block javascripts %}
            <!-- LibrerÃ­a jQuery requerida por los plugins de JavaScript -->
                <script src="{{ asset('resources/js/jquery.js')}}"></script>
 
            <!-- plugins JavaScript de Bootstrap  -->
            <script src="{{ asset('resources/js/bootstrap.min.js')}}"></script>
        {% endblock %}
    </body>
</html>
