{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'form-horizontal' } }) }}
 
    <div class="row">
        <div class="col-xs-3">
            {{ form_widget(form) }}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-2 pull-right text-right">
            <input  class="btn btn-primary btn" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
        </div>
    </div>
{{ form_end(form) }}
