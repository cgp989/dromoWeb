{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Comentarios</h1>

    <table class="table table-hover records_list">
        <thead>
            <tr>
                <th class="col-xs-6">Comentario</th>
                <th class="col-xs-1">Valoraci&oacute;n</th>
                <th class="col-xs-2">Fecha</th>
                <th class="col-xs-1">Usuario</th>
                <th class="col-xs-1">Estado</th>
                <th class="col-xs-1">Denunciar</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.comentario }}</td>
                    <td>{{ entity.valoracion }}</td>
                    <td>{{ entity.fecha|date('d-m-Y H:i:s') }}</td>
                    <td>{{ entity.usuarioMovil }}</td>
                    <td>{{ entity.estadoComentario.nombre }}</td>
                    <td>                       
                        <a title="denunciar" href="{{ path('comentario_delete', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-remove"></span></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
