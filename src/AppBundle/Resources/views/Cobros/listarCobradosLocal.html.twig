{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Cobros a {{ nombreLocal }}</h1>
    <div class="row btn-action-top">
        <div class="col-xs-1 pull-right">
            <a title="volver" href="{{ path('cobros_cobrados_locales') }}"><span class="glyphicon glyphicon-circle-arrow-left"></span></a>
        </div>
    </div>
    <table class="table table-hover records_list">
        <thead>
            <tr>
                <th class="col-xs-3">Fecha</th>
                <th class="col-xs-6">Titulo</th>
                <th class="col-xs-2">Importe</th>
            </tr>
        </thead>
        <tbody>
            {% for cupon in cuponesCobrados %}
                <tr>
                    <td>{{ cupon.fecha|date('d/m/Y') }}</td>
                    <td>{{ cupon.titulo }}</td>
                    <td>{{ cupon.precio}}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
