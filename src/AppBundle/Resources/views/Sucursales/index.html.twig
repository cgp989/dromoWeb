{% extends '::base.html.twig' %}

{% block body -%}
    <h3 class="sub-header">Mis Sucursales</h3>
    <table class="table table-hover records_list">
        <thead>
            <tr>
                <th class="col-xs-4">Local Comercial</th>
                <th class="col-xs-4">Direccion</th>
                <th class="col-xs-3">Telefono</th>                
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.localComercial }}</td>
                    <td>{{ entity.direccion }}</td>
                    <td>{{ entity.telefono }}</td>            
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endblock %}
