{% extends '::base.html.twig' %}

{% block body -%}
   <h2 class="sub-header">Nuevo Premio</h2>
    
    <div class="row btn-action-top form-group">
        <div class="col-xs-1 pull-right">
            <a title="volver" href="{{ path('premio') }}">
                <span class="glyphicon glyphicon-circle-arrow-left"></span>
            </a>
        </div>
    </div>
                
    <div class="col-xs-12">
        {{ form_start(form) }}
            <div class="row error-count">{{ form_errors(form) }}</div>
            <div class="row">
                <div class="col-xs-3">{{ form_row(form.titulo) }}</div>                
                <div class="col-xs-3 col-xs-offset-1">{{ form_row(form.tipoPromocion) }}</div>
            </div>
            <div class="row">
                <div class="col-xs-3">{{ form_row(form.precio) }}</div>
                <div class="col-xs-3 col-xs-offset-1">{{ form_row(form.puntajePremio) }}</div>
                <div class="col-xs-3 col-xs-offset-1">{{ form_row(form.estadoPromocion) }}</div>
            </div>
             <div class="row">
                <div class="col-xs-12">{{ form_row(form.localComercial) }}</div>
            </div>
            <div class="row">
                <div class="col-xs-12">{{ form_row(form.descripcion) }}</div>
            </div>
            <div class="row">
                <div class="col-xs-2 pull-right text-right">{{ form_row(form.crear) }}</div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
