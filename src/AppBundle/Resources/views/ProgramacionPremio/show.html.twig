{% extends '::base.html.twig' %}

{% block body -%}
    <h2 class="sub-header">Ver programaci&oacute;n de premio</h2>
    <div class="row btn-action-top">
        <div class="col-xs-1 pull-right">{{ form(delete_form) }}</div>
        <div class="col-xs-1 pull-right">
            <a title="editar" href="{{ path('programacionPremio_edit', { 'id': entity.id }) }}">
                <span class="glyphicon glyphicon-edit"></span>
            </a>
        </div>
        <div class="col-xs-1 pull-right">
            <a title="volver" href="{{ path('programacionPremio_premio', { 'idPromocion': entity.promocion.id}) }}">
                <span class="glyphicon glyphicon-circle-arrow-left"></span>
            </a>
        </div>
    </div>
    <table class="table table-show">
        <tbody>
            <tr>
                <th class="col-xs-2">Premio</th>
                <td>{{ entity.promocion }}</td>
            </tr>
            <tr>
                <th>Cantidad diaria</th>
                <td>{{ entity.cantidad }}</td>
            </tr>
            <tr>
                <th>Cantidad total</th>
                <td>{{ entity.cantidadTotal }}</td>
            </tr>
            <tr>
                <th>Fecha Inicio</th>
                <td>{{ entity.fechaInicio|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Fecha Fin</th>
                <td>{{ entity.fechaFin|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Hora Inicio</th>
                <td>{{ entity.horaInicio|date('H:i') }}</td>
            </tr>
            <tr>
                <th>Duraci&oacute;n [h]</th>
                <td>{{ entity.duracion_ }}</td>
            </tr>
            <tr>
                <th>D&iacute;as</th>
                <td>{{ entity.getDias}}</td>
            </tr>
            <tr>
                <th>Observaci&oacute;n</th>
                <td>{{ entity.descripcion }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
