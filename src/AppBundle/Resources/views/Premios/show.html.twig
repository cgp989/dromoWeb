{% extends '::base.html.twig' %}

{% block body -%}
    <h2 class="sub-header">Ver premio</h2>
    <div class="row btn-action-top">
        <div class="col-xs-1 pull-right">{{ form(delete_form) }}</div>
        <div class="col-xs-1 pull-right">
            <a title="editar" href="{{ path('premios_edit', { 'id': entity.id }) }}">
                <span class="glyphicon glyphicon-edit"></span>
            </a>
        </div>
        <div class="col-xs-1 pull-right">
            <a title="volver" href="{{ path('premios') }}">
                <span class="glyphicon glyphicon-circle-arrow-left"></span>
            </a>
        </div>
    </div>
    <table class="table table-show">
        <tbody>
            <tr>
                <th>Tipo</th>
                <td>{{ entity.tipoPromocion }}</td>
            </tr>
            <tr>
                <th class="col-xs-1">T&iacute;tulo</th>
                <td>{{ entity.titulo }}</td>
            </tr>
            <tr>
                <th>Descripci&oacute;n</th>
                <td>{{ entity.descripcion }}</td>
            </tr>
            <tr>
                <th>Puntaje</th>
                <td>{{ entity.puntajePremio }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>${{ entity.precio }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ entity.estadoPromocion }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
