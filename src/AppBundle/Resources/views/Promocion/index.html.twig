{% extends '::base.html.twig' %}

{% block body -%}
    <h3 class="sub-header">Promociones</h3>
    
    <a title="nueva" class="btn-action-top pull-right" href="{{ path('promocion_new') }}">
        <span class="glyphicon glyphicon-plus-sign">
    </a>
        
    <table class="table table-hover records_list">
        <thead>
            <tr>
                <th class="col-xs-1">Tipo</th>
                <th class="col-xs-7">T&iacute;tulo</th>
                <th class="col-xs-1">Precio</th>
                <th class="col-xs-1">Estado</th>
                <th class="col-xs-2">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    <image class="img-tipo" src="{{ asset('resources/images/iconos/tipo_promocion/') ~ 'ic_' ~ entity.tipoPromocion.nombre ~ '.png' }}">
                </td>
                <td>{{ entity.titulo }}</td>
                <td>${{ entity.precio }}</td>
                <td>{{ entity.estadoPromocion }}</td>
                <td>
                    <a title="ver" href="{{ path('promocion_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>
                    <a title="editar" href="{{ path('promocion_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-edit"></span></a>
                    <a title="ver programaciones" href="{{ path('programacion_promocion', { 'idPromocion': entity.id }) }}"><span class="glyphicon glyphicon-time"></span></a>
                    <a title="nueva programacion" href="{{ path('programacion_promocion_new', { 'idPromocion': entity.id }) }}"><span class="glyphicon glyphicon-plus"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
