{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Promocion</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ entity.titulo }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ entity.descripcion }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ entity.precio }}</td>
            </tr>
            <tr>
                <th>Estamoderada</th>
                <td>{{ entity.estaModerada }}</td>
            </tr>
            <tr>
                <th>Puntajepremio</th>
                <td>{{ entity.puntajePremio }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('premio') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('premio_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
